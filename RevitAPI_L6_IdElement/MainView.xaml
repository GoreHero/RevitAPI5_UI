<Window x:Class="RevitAPI_L6_IdElement.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAPI_L6_IdElement"
             mc:Ignorable="d" 
             Height="100" Width="200"
             Title="Идентификатор элемента">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White" Offset="0.304"/>
            <GradientStop Color="White" Offset="1"/>
            <GradientStop Color="#FFECD014" Offset="0.343"/>
            <GradientStop Color="White" Offset="0.426"/>
            <GradientStop Color="White" Offset="0.209"/>
            <GradientStop Color="#FFECD014" Offset="0.265"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>
        <Label Content="Узнать ID элемента"
               Margin="5"/>
        <Button Content="Выбрать" Command="{Binding SelectCommand}"
                Margin="5" BorderBrush="Black"
                BorderThickness="1,1,0,0" FontFamily="Mistral" Background="{x:Null}"/>
    </StackPanel>
</Window>
